<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#333333">

    <LinearLayout
        android:id="@+id/linear789horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonLayout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/textViewGenerate"
        >
        <Button
            android:id="@+id/button7"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />
        <Button
            android:id="@+id/button9"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="9" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear456horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@id/linear789horizontal"
        >
        <Button
            android:id="@+id/button4"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="6" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear123horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@id/linear456horizontal"
        >
        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <Button
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />
        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="3" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearZeroHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@id/linear123horizontal"
        >
        <Button
            android:id="@+id/button0"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        <Button
            android:id="@+id/buttonDot"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="." />
        <Button
            android:id="@+id/buttonMinus"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCGQhorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@id/linearZeroHorizontal"
        >
        <Button
            android:id="@+id/buttonClear"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />
        <Button
            android:id="@+id/buttonGenerate"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate" />
        <Button
            android:id="@+id/buttonQuit"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="Quit" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearEQUALSHOWHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@id/linearCGQhorizontal"
        >
        <Button
            android:id="@+id/buttonEqual"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=" />
        <Button
            android:id="@+id/buttonShowAll"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:text="Show All" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:width="350dp"
        android:ems="10"
        android:textSize="19dp"
        android:inputType="textPersonName"
        android:text="Enter the result here"
        android:gravity="center"
        android:textColor="#9E046F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="572dp" />

    <TextView
        android:id="@+id/textViewGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="350dp"
        android:height="110dp"
        android:background="#101010"
        android:gravity="center"
        android:text="EPA"
        android:layout_marginTop="55dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextResult"
        />

</androidx.constraintlayout.widget.ConstraintLayout>